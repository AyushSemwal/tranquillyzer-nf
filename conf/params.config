params {

  // reference and seq_orders
  reference          = './ref/genome.fa'
  seq_order_file     = './seq_orders.tsv'

  // base_qual flag
  output_bquals      = false
  output_fastq       = false

  // Model
  model_name         = '_010'
  model_type         = 'CRF'
  chunk_size         = 300_000
  bc_lv_threshold    = 1
  gpu_mem            = 48

  // Resources
  preprocess_cpus    = 32
  annotate_cpus      = 32
  align_cpus         = 32
  dedup_cpus         = 16

  // Container image (can be overridden in profiles/CLI)
  container_trq      = 'varishenlab/tranquillyzer:tranquillyzer_v0.1.1_tf_2.15.1'
}